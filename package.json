{
	"name": "pluct-business-engine",
	"version": "1.0.0",
	"private": true,
	"description": "Pluct Business Engine - Secure credit management and token vending system",
	"scripts": {
		"deploy": "wrangler deploy",
		"dev": "wrangler dev",
		"start": "wrangler dev",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"test:local": "powershell -ExecutionPolicy Bypass -File .\\scripts\\pluct-test-unified.ps1 -Mode local",
		"test:production": "powershell -ExecutionPolicy Bypass -File .\\scripts\\pluct-test-unified.ps1 -Mode production",
		"test:complete": "powershell -ExecutionPolicy Bypass -File .\\scripts\\pluct-test-unified.ps1 -Mode complete",
		"test:build": "powershell -ExecutionPolicy Bypass -File .\\scripts\\pluct-test-unified.ps1 -Mode build",
		"deploy:verify": "powershell -ExecutionPolicy Bypass -File .\\scripts\\pluct-deploy-unified.ps1 -Action verify",
		"deploy:push": "powershell -ExecutionPolicy Bypass -File .\\scripts\\pluct-deploy-unified.ps1 -Action deploy",
		"deploy:test": "powershell -ExecutionPolicy Bypass -File .\\scripts\\pluct-deploy-unified.ps1 -Action test",
		"deploy:all": "powershell -ExecutionPolicy Bypass -File .\\scripts\\pluct-deploy-unified.ps1 -Action all",
		"cf-typegen": "wrangler types",
		"build": "wrangler build",
		"preview": "wrangler dev --remote",
		"lint": "echo 'Linting skipped - no ESLint configured'",
		"lint:fix": "echo 'Linting skipped - no ESLint configured'"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.8.19",
		"@types/node": "^24.7.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.2",
		"vitest": "~3.2.0",
		"wrangler": "^4.42.2"
	},
	"dependencies": {
		"hono": "^4.9.10",
		"jose": "^6.1.0"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
